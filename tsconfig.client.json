{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "lib": ["DOM", "ES6"],
    "outDir": "./public/build",
    "rootDir": "./src/client",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/client/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
