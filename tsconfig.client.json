{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "lib": ["DOM", "ES6"],
    "outDir": "./docs/build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/client/**/*", "./src/common/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
